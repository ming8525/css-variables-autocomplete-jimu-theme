{
  "name": "css-variables-autocomplete-jimu-theme",
  "displayName": "css-variables-autocomplete-jimu-theme",
  "description": "Automatically complete the css variables provided in jimu-theme",
  "version": "0.0.1",
  "repository": "https://github.com/ming8525/css-variables-autocomplete-jimu-theme",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:scss",
    "onLanguage:css",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onStartupFinished"
  ],
  "main": "./dist/index.js",
  "contributes": {
    "languages": [
      {
        "id": "css",
        "extensions": [
          ".css"
        ]
      },
      {
        "id": "scss",
        "extensions": [
          ".scss"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      },
      {
        "id": "json",
        "extensions": [
          ".json"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSS Variables Autocomplete Settings",
      "properties": {
        "cssVariablesAutocompleteJimuTheme.filePath": {
          "type": "string",
          "default": "jimu-theme/lib/variables-template.css",
          "description": "Path to the CSS variables file."
        },
        "cssVariablesAutocompleteJimuTheme.languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "css",
            "scss",
            "json",
            "typescript",
            "typescriptreact"
          ],
          "description": "List of languages in which the autocomplete should be enabled."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package -o dist"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.5.4",
    "vsce": "^2.15.0"
  }
}
